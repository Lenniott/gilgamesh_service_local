# Gilgamesh Media Processing Service Configuration
# Copy this to .env and update with your actual values

# Database Configuration
PG_DBNAME=gilgamesh_media
PG_USER=postgres
PG_PASSWORD=your_secure_password
PG_HOST=localhost
PG_PORT=5432

# AI Provider Configuration
# Choose: "openai" or "gemini"
AI_PROVIDER=openai

# OpenAI Configuration (for GPT-4 Vision)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Gemini Configuration (for Gemini 2.0 Flash)
GEMINI_API_KEY=your-gemini-api-key-here

# Qdrant Vector Database Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-api-key-here

# Optional: Production settings
# ENVIRONMENT=production
# LOG_LEVEL=INFO

# Script Generation (Cost Reduction)
TEXT_ONLY_MODE=true
SCRIPT_MAX_TOKENS=500
STRUCTURED_SCRIPT_MODE=true

# Diversity Configuration
MIN_UNIQUE_VIDEOS_PER_COMPILATION=3
MAX_SEGMENTS_PER_VIDEO=2
DIVERSITY_WARNING_THRESHOLD=0.3 